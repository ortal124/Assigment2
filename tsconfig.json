{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.test.ts", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}